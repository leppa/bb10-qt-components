<?xml version="1.0" encoding="utf-8" standalone="no"?>
<qnx xmlns="http://www.qnx.com/schemas/application/1.0">
    <id>de.zwong.symqtcompgallery.qt5</id>
    <name>Symbian Qt5 Gallery</name>
    <versionNumber>1.0.0</versionNumber>
    <description>Bla bla bla</description>

    <initialWindow>
        <systemChrome>none</systemChrome>
        <transparent>false</transparent>
        <autoOrients>false</autoOrients>
        <aspectRatio>portrait</aspectRatio>
    </initialWindow>

    <env var="QML_IMPORT_PATH" value="app/native/imports"/>
    <env var="QT_PLUGIN_PATH" value="app/native/plugins"/>
    <env var="LD_LIBRARY_PATH" value="app/native/lib"/>

    <env var="QT_DEBUG_PLUGINS" value="0" />
    <env var="LD_DEBUG" value="0"/>
    <env var="M_THEME_DIR" value="app/native/themes"/>

    <author>Kodira UG</author>
    <authorId>gYAAgB7aAXvpUhF3z1kKI_e-L0U</authorId>
    <action system="true">run_native</action>
    <category>core.games</category>

    <!-- Better performance?! -->
    <!--
    <env var="QBB_USE_OPENGL" value="1"/>
    -->

    <arg>-platform</arg>
    <arg>qnx</arg>

    <asset entry="true" path="qmlgallery" type="Qnx/Elf">qmlgallery</asset>
    <asset path="splashscreen.png">splashscreen.png</asset>
    <asset path="icon.png">icon.png</asset>

    <asset path="qt5/lib">lib</asset>
    <asset path="qt5/plugins">plugins</asset>
    <asset path="qt5/imports">imports</asset>

    <icon><image>icon.png</image></icon>
    <splashscreen>splashscreen.png</splashscreen>
</qnx>

